@page "/"
@layout Layout.MainLayout

<div class="hero-section">
    <div class="hero-text">
        <h1>Caly Bear Child Care</h1>
        <p>Where curiosity grows, friendships bloom, and every child feels at home.</p>
        <NavLink href="/photos" class="btn btn-primary">View Our Photo Gallery</NavLink>
    </div>
</div>

<div class="features-section">
    <h2>Why Families Choose Us</h2>
    <div class="feature-grid">
        <div class="feature-card">
            <span class="bi bi-heart-fill icon"></span>
            <h4>Safe & Loving Environment</h4>
            <p>We nurture every child with care, compassion, and attention.</p>
        </div>
        <div class="feature-card">
            <span class="bi bi-calendar-event icon"></span>
            <h4>Structured Daily Schedule</h4>
            <p>Our calendar includes play, learning, meals, and rest — all color-coded for clarity.</p>
        </div>
        <div class="feature-card">
            <span class="bi bi-people-fill icon"></span>
            <h4>Experienced Staff</h4>
            <p>Certified caregivers and educators who love what they do.</p>
        </div>
    </div>
</div>